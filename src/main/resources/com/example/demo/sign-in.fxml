<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="494.0" prefWidth="426.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SignInController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <AnchorPane prefHeight="496.0" prefWidth="386.0">
         <children>
            <AnchorPane layoutX="93.0" layoutY="22.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label layoutX="48.0" text="Sign in">
                     <font>
                        <Font size="37.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="30.0" layoutY="104.0" prefHeight="200.0" prefWidth="329.0">
               <children>
                  <Label layoutX="32.0" layoutY="55.0" text="Username" />
                  <TextField fx:id="username" layoutX="100.0" layoutY="50.0" />
                  <Label layoutX="33.0" layoutY="105.0" text="Password" />
                  <TextField fx:id="password" layoutX="100.0" layoutY="100.0" />
                  <Button layoutX="137.0" layoutY="152.0" mnemonicParsing="false" onAction="#OnClickSignin" text="Sign in" />
                  <Label fx:id="error" layoutX="100.0" layoutY="126.0" prefHeight="17.0" prefWidth="160.0" />
               </children>
            </AnchorPane>
            <AnchorPane layoutX="40.0" layoutY="342.0" prefHeight="90.0" prefWidth="310.0">
               <children>
                  <Label layoutX="43.0" layoutY="37.0" text="Not a member? " />
                  <Button layoutX="130.0" layoutY="33.0" mnemonicParsing="false" onAction="#LoadSignUp" prefHeight="26.0" prefWidth="87.0" text="Click here" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
